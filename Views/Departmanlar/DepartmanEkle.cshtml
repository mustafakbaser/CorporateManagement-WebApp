@model RakamIKProjesi.Models.Siniflar.Departmanlar

@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 style="margin-top:30px; margin-bottom:30px">Yeni Departman Oluştur</h4>

<form class="form-group" method="post">

    @Html.Label("Departman Adı")
    @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" }) <!--Lambda Operation; x => x, atama yapar.-->
    <br />

    @Html.Label("aktif-departman", "Aktif Departman") @Html.RadioButtonFor(x => x.Aktiflik, true, new { id = "aktif-departman", Checked = "checked" }) <br />
    @Html.Label("pasif-departman", "Pasif Departman") @Html.RadioButtonFor(x => x.Aktiflik, false, new { id = "pasif-departman" })
    <br />

    <button class="btn btn-info" style="margin-top:30px">Oluştur</button>
</form>