<!DOCTYPE html>
<html>
<head>

    <!-- Custom Theme files -->
    <link href="~/Web Template2/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <script src="~/Web Template2/js/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Web Template2/css/font-awesome.css">
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <script src="~/Web Template2/js/zingchart.min.js"></script>
    <script src="~/Web Template2/js/zingchart.jquery.js"></script>
    <script src="~/Web Template2/js/jquery.easydropdown.js"></script>
    <script src="~/Web Template2/js/jquery.nicescroll.js"></script>

    <link href="~/Web Template2/css/jqvmap.css" media="screen" rel="stylesheet" type="text/css" />


    <script src="~/Web Template2/js/easyResponsiveTabs.js" type="text/javascript"></script>

    <link href="~/Web Template2/css/nav.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/Web Template2/js/main.js"></script> <!-- Resource jQuery -->
    <!-- chart -->
    <script src="~/Web Template2/js/Chart1.js"></script>
    <!-- //chart -->
</head>
<body>
    <h3 style="margin-top:30px;margin-bottom:30px; text-align:center">Veri ve İstatistik</h3>
    <hr />
    <!-- LINQ Sorguları -->
    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" style="background-color:#2979ff">
                <div class="icon-text">
                    <h3>@ViewBag.aktifProjeSayisi</h3>
                    <p>Aktif Proje Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users">

                <div class="icon-text">
                    <h3>@ViewBag.pasifProjeSayisi</h3>
                    <p>Tamamlanan Proje Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color:#2979ff">

                <div class="icon-text">
                    <h3>@ViewBag.aktifPersonel</h3>
                    <p>Aktif Personel Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors">

                <div class="icon-text">
                    <h3>@ViewBag.pasifPersonel</h3>
                    <p>İş Akdi Sonlandırılmış Personel</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>

    <hr />

    <h4 style="margin-top:50px;margin-bottom:30px; text-align:center">Personel Verileri</h4>
    <hr />

    <div class="total-content">
        <div class="list_of_members">
            <div class="sales" >
                <div class="icon-text">
                    <h3>@ViewBag.yonetici</h3>
                    <p>Yönetici Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users">

                <div class="icon-text">
                    <h3>@ViewBag.programci</h3>
                    <p>Programcı Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="orders" style="background-color:#2979ff">

                <div class="icon-text">
                    <h3>@ViewBag.tasarimci</h3>
                    <p>Tasarımcı Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="visitors">

                <div class="icon-text">
                    <h3>@ViewBag.analist</h3>
                    <p>Analist Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>

    <hr />

    <h4 style="margin-top:50px;margin-bottom:30px; text-align:center">Departman Verileri</h4>
    <hr />

    <div class="total-content">
        <div class="list_of_members">
            <div class="sales">
                <div class="icon-text">
                    <h3>@ViewBag.aktifDepartmanSayisi</h3>
                    <p>Aktif Departman Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="new-users">

                <div class="icon-text">
                    <h3>@ViewBag.pasifDepartmanSayisi</h3>
                    <p>Pasif Departman Sayısı</p>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>

</body>
</html>
