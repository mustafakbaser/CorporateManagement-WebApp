@model RakamIKProjesi.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelVeri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="margin-top:30px">Rakam Teknoloji | Personel Güncelle</h3>
@*Bu sayfa yüklendikten sonra bir post işlemi gerçekleştirdiğinde hangi ActionResultın çalışacağı;*@

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    @Html.HiddenFor(x => x.PersonelID)

    @Html.LabelFor(x => x.PersonelAd)
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })

    @Html.LabelFor(x => x.Birim)
    @Html.TextBoxFor(x => x.Birim, new { @class = "form-control" })

    @Html.LabelFor(x => x.Departman)
    @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.yeniPersonelDepartman, new { @class = "form-control" })

    <hr />

    @Html.Label("aktif-calisan", "Aktif Personel") @Html.RadioButtonFor(x => x.PersonelAktif, true, new { id = "aktif-calisan", Checked = "checked" })
    <br />
    @Html.Label("pasif-calisan", "Pasif Personel") @Html.RadioButtonFor(x => x.PersonelAktif, false, new { id = "pasif-calisan" })

    <br />

    <button class="btn btn-warning" style="margin-top:20px">Güncelle</button>
}